<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="controller.SignupController">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0">
        </ColumnConstraints>
    </columnConstraints>
   <children>
   
       <!-- Add Header Label -->
       <Label text="Sign up" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
           <font>
               <Font name="Arial" size="24" />
           </font>
           <GridPane.margin>
               <Insets bottom="20" left="0" right="0" top="20" />
           </GridPane.margin>
       </Label>
   
         
         
             <!-- Add Name Label -->
       <Label text="First Name : " GridPane.columnIndex="0" GridPane.rowIndex="2">
    </Label>
       <!-- Add Name Text Field -->
       <TextField fx:id="firstNameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
   
       <!-- Add Email Label -->
       <Label text="Email : " GridPane.columnIndex="0" GridPane.rowIndex="4">
    </Label>
       <!-- Add Email Text Field -->
       <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   
   
   
       <!-- Add Password Label -->
       <Label text="Password : " GridPane.columnIndex="0" GridPane.rowIndex="5">
    </Label>
       <!-- Add Password Field -->
       <PasswordField fx:id="passwordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   
   
       <!-- Add Submit Button -->
       <Button defaultButton="true" onAction="#signup" prefHeight="40" prefWidth="100" text="Signup" GridPane.columnSpan="2" GridPane.halignment="RIGHT" GridPane.rowIndex="9" GridPane.rowSpan="1">
           <GridPane.margin>
               <Insets bottom="20" left="0" right="0" top="20" />
           </GridPane.margin>
       </Button>
      <TextField fx:id="lastNameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />
      <Label text="Last Name : " GridPane.rowIndex="3" />
      <PasswordField fx:id="confirmPasswordField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <Label text="Confirm Password : " GridPane.rowIndex="6" />
      <TextField fx:id="phoneNumberField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <Label text="Phone Number : " GridPane.rowIndex="7" />
      <Label text="Shipping Address :" GridPane.rowIndex="8" />
      <TextField fx:id="shippingAddressField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="8" />
      <TextField fx:id="usernameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <Hyperlink onAction="#login" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="9" />
      <Label text="Username : " GridPane.rowIndex="1" />
   </children>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
</GridPane>
